{{> layout }}
<h1 class="my-4">{{title}}</h1>
<form action="/manage-items/api" method="post" enctype="multipart/form-data" class="mb-4">
  <div class="form-group">
    <label for="name">Item Name:</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="Item Name" required>
  </div>
  <div class="form-group">
    <label for="description">Item Description:</label>
    <input type="text" class="form-control" id="description" name="description" placeholder="Item Description" required>
  </div>
  <div class="form-group">
    <label for="price">Item Price:</label>
    <input type="number" class="form-control" id="price" name="price" placeholder="Item Price" required>
  </div>
  <div class="form-group">
    <label for="store">Store:</label>
    <input type="text" class="form-control" id="store" name="store" placeholder="Store" required>
  </div>
  <div class="form-group">
    <label for="image">Item Image:</label>
    <input type="file" class="form-control-file" id="image" name="image" accept="image/*">
  </div>
  <button type="submit" class="btn btn-primary">Add Item</button>
</form>
<ul class="list-group">
  {{#items}}
  <li class="list-group-item">
    <div class="d-flex justify-content-between">
      <div>
        <img src="{{image}}" alt="{{name}}" style="max-width: 100px; margin-right: 20px;">
        <strong>{{name}}</strong> - {{description}} - Â£{{price}} - Available at {{store}}
      </div>
      <div>
        <a href="/manage-items/edit/{{_id}}" class="btn btn-warning btn-sm mr-2">Edit</a>
        <form action="/manage-items/api/{{_id}}?_method=DELETE" method="post" class="d-inline">
          <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </li>
  {{/items}}
</ul>